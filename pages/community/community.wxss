.container {
  padding: 20px;
}
.post {
  margin-bottom: 20px;
  padding: 15px;
  border: 1px solid #ddd;
  border-radius: 10px;
}
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}
.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}
.nickname {
  font-size: 18px;
  font-weight: bold;
}
.stats .stat-item {
  font-size: 16px;
  margin: 5px 0;
}
.content .content-text {
  font-size: 16px;
  margin: 10px 0;
}
.actions {
  display: flex;
  justify-content: space-around;
  margin-top: 10px;
}
.action-button {
  font-size: 13px;

}
.comment {
  margin-top: 10px;
  padding: 10px;
  background-color: #f9f9f9;
  border-radius: 5px;
}
.comment-nickname {
  font-weight: bold;
}
.comment-text {
  margin-left: 5px;
}
